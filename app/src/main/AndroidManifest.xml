<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atc.newsappfinalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TechnologyAcivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.EntertainmentActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.SportsActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.HealthActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.DetailsActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.BusinessActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>